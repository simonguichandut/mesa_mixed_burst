! Accrete 56Fe until a column y=1e11 (already a column 1e9, which is negligible)
! max_model_number = 4piR^2*y/mdot/dt (dt=max_years_for_timestep)

&star_job    

  load_saved_model = .true.
  saved_model_name = 'models/ns_env_12km.mod'
  !saved_model_name = 'models/ns_env.mod' ! use this one for 10km star

  save_model_when_terminate = .true.
  save_model_filename = 'models/ns_env_56Fe.mod'

  set_initial_model_number = .true.
  initial_model_number = 0

  ! set_initial_cumulative_energy_error = .true.
  ! new_cumulative_energy_error = 0d0

  ! change_initial_v_flag = .true.
  ! new_v_flag = .false.

  set_tau_factor = .true. 
  set_to_this_tau_factor = 1000

  ! pgstar_flag = .true.

/ ! end of star_job namelist

&controls      

  ! very slow but works
  ! mass_change = 1.0d-5 ! Msun/year 
  ! max_years_for_timestep = 1.0d-8
  ! max_model_number = 1000   !10000 for 1e11, 1000 for 1e10

  mass_change = 1.0d-5 ! Msun/year
  max_years_for_timestep = 1.0d-6
  max_model_number = 100
  ! Allow large increases in central temperature and timestep so it takes
  ! the timestep that we want
  delta_lgT_cntr_limit = 1.0d0 !default 0.01d0
  max_timestep_factor = 10.0d0 !default 1.2d0

  ! turn off nuclear burning
  max_abar_for_burning = -1


  accrete_same_as_surface = .false. 
  accrete_given_mass_fractions = .true. 
  num_accretion_species = 1
  accretion_species_xa(1) = 1
  accretion_species_id(1) = 'fe56'

  mesh_delta_coeff = 0.5
  varcontrol_target = 1d-3
  min_timestep_limit = 1d-12

  photo_interval = 1000
  profile_interval = 1000
  history_interval = 1000
  terminal_interval = 10
  write_header_frequency = 10

/ ! end of controls namelist
