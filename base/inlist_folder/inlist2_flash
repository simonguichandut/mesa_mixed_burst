! Keep accreting and follow flash in detail, until Eddington in outer layers

&star_job    

  !saved_model_name = 'models/ns_env_ignited.mod'
  saved_model_name = '/home/ximun/projects/def-cumming/ximun/mesa_mixed_burst/runs/make_ignition_model/models/ns_env_ignited.mod'

  save_model_filename = 'models/ns_env_Edd.mod' ! I say Edd but this is 0.7* or 0.9*LEdd, depending on the value of x_ctrl(2) below

  !! Reset model number and age
  !! Starting from here, age is t-t_ignition
  set_initial_model_number = .true.
  set_initial_age = .true.

  !! Turn on hydrodynamics
  !change_v_flag = .true. 
  !change_initial_v_flag = .true. 
  !new_v_flag = .true.

  pgstar_flag = .true.
  show_timestep_limit_counts_when_terminate = .true.
  
  !! Run-specific inlist
  read_extra_star_job_inlist2 = .true.
  extra_star_job_inlist2_name = 'inlist_folder/inlist2_flash_extra' 

/ ! end of star_job namelist

&controls      

  !! Stop when L/LEdd=x_ctrl(2) (at surface)
  x_logical_ctrl(2) = .true.
  x_ctrl(2) = 0.9 ! this can be overwritten in the extra inlist
  
  !! Accrete solar mixture
  accrete_same_as_surface = .false. 
  accrete_given_mass_fractions = .true. 
  mass_change = 3d-10! Msun/year
  num_accretion_species = 3
  accretion_species_xa(1) = 0.7
  accretion_species_id(1) = 'h1'
  accretion_species_xa(2) = 0.28
  accretion_species_id(2) = 'he4'
  accretion_species_xa(3) = 0.02
  accretion_species_id(3) = 'c12'

  !! Limit luminosity increase
  delta_lgL_nuc_limit = 0.01  ! default none
  delta_lgL_nuc_hard_limit = 0.15 ! default none
  lgL_nuc_burn_min = -2d0 ! default 0.5d0

  !! Atmosphere
  atm_option = 'T_tau'
  atm_T_tau_relation = 'Eddington'
  atm_T_tau_opacity = 'fixed'
  Pextra_factor = 2

  !! Convection and mixing
  !! These parameters change from run to run, are defined in extra inlist controls

  !! Energy conservation
  use_gold_tolerances = .false.  ! default true
  use_gold2_tolerances = .false. ! default true
  convergence_ignore_equL_residuals = .true. ! default false

  !! Resolution
  min_timestep_limit = 1d-20
  time_delta_coeff = 0.1 ! default 1
  max_allowed_nz = 20000
  !! others in extra inlist controls

  merge_if_dlnR_too_small = .true. ! default false

  mesh_min_dlnR = 5d-9 ! default 1d-9
  varcontrol_target = 0.5d-3 ! default 1d-3
  
  !! Files
  photo_interval = 500
  profile_interval = 5
  history_interval = 1
  max_num_profile_models = 500
  max_num_profile_models = 1000  !! careful this can fill up the disk

  !! Force a high priority profile save at every x_ctrl(7) seconds
  x_ctrl(7) = 1d-2

  !! Special file for history of mixing zones
  !! Includes every zone, not just a fixed number as in history_columns.list
  !! See run_star_extras
  x_logical_ctrl(10) = .true.
  x_integer_ctrl(10) = 1 ! interval for saving mixing history
  
  !! Run-specific inlist
  read_extra_controls_inlist2 = .true.
  extra_controls_inlist2_name = 'inlist_folder/inlist2_flash_extra'
  
/ ! end of controls namelist
