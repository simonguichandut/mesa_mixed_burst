! Accrete 56Fe until a column y=1e11 (already a column 1e9, which is negligible)
! max_model_number = 4piR^2*y/mdot/dt (dt=max_years_for_timestep)
! or max_age = 4piR^2*y/mdot

&star_job    

  saved_model_name = 'models/ns_env_12km.mod'
  save_model_filename = 'models/ns_env_56Fe.mod'

  set_initial_age = .true.

  !! Set optical depth boundary
  set_tau_factor = .true. 
  set_to_this_tau_factor = 150 ! for Eddington atmosphere, this places the outer boundary at tau=2/3*150=100

/ ! end of star_job namelist

&controls      

  !! Accrete
  accrete_same_as_surface = .false. 
  accrete_given_mass_fractions = .true. 
  num_accretion_species = 1
  accretion_species_xa(1) = 1
  accretion_species_id(1) = 'fe56'

  mass_change = 1.0d-7
  max_age = 1.0d-2

  !! Turn off nuclear burning
  max_abar_for_burning = -1

  !! Resolution
  mesh_delta_coeff = 0.5
  min_timestep_limit = 1d-12

  !! Files
  photo_interval = 1000
  profile_interval = 1000

/ ! end of controls namelist
